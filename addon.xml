<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<addon id="script.kodijivelette"
	   name="Kodijivelette, Slim devices (Squeezebox) view and basic control"
	   version="0.0.k00"
	   provider-name="rondrach">

	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
		<import addon="xbmc.python" version="2.25.0"/>
		<import addon="script.module.requests" version="1.1.0"/>
		<import addon="script.module.pyxbmct" version="1.3.1" />
	</requires>

	<extension point="xbmc.python.script" library="addon.py"/>

	<extension point="xbmc.addon.metadata">
		<summary lang="en">This script provides view and basic controls of music being played on squeezebox (like transporter) via a Logitech Media Server</summary>
		<description lang="en">a basic script to display and control the squeeze box information of the music playing from a Logitech Media Server (SlimServer)</description>
		<language></language>
		<source>https://github.com/sitronet/script.kodijivelette</source>
		<platform>all</platform>
		<assets>
			<fanart>docs/fanart.jpg</fanart>
			<icon>resources/icon-ori.png</icon>
			<screenshot>docs/screenshot/screenshot000.png</screenshot>
			<screenshot>docs/screenshot/screenshot001.png</screenshot>
			<screenshot>docs/screenshot/screenshot010.png</screenshot>
        </assets>
	</extension>
</addon>
