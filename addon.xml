<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.kodijivelette"
	   name="Kodijivelette, Squeeze view and basic control"
	   version="0.0.f"
	   provider-name="rondrach">

	<requires>
		<import addon="xbmc.python" version="2.25.0"/>
		<import addon="script.module.pyxbmct" version="1.3.1" />
	</requires>

	<extension point="xbmc.python.script" library="testit.py">
		<provides>executable</provides>
	</extension>

	<extension point="xbmc.addon.metadata">
		<summary lang="en">This script provides view and basic controls of music being played on squeezebox (like transporter) via a Logitech Media Server</summary>
		<description lang="en">a basic script to display and control the squeeze box information of the music playing from a Logitech Media Server,
		</description>

		<language></language>

		<source>https://github.com/sitronet/script.kodijivelette</source>

		<platform>all</platform>

		<assets>
			<fanart>resources/skins/media/icon.png</fanart>
          	<screenshot>docs/screenshots/screenshot-01.png</screenshot>
          	<screenshot>docs/screenshots/screenshot-02.png</screenshot>
          	<screenshot>docs/screenshots/screenshot-03.png</screenshot>
        </assets>

	</extension>
</addon>
